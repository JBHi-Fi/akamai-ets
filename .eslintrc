{
    "extends": ["semistandard"],
    "env": {
        "node"  : true,
        "mocha" : true
    },
    "rules": {
        "padded-blocks"   : 0,
        "one-var"         : ["error", "always"],
        "indent"          : ["error", 4],
        "no-multi-spaces" : ["error", {
            "exceptions": {
                "VariableDeclarator"   : true,
                "AssignmentExpression" : true,
                "LogicalExpression"    : true,
                "ObjectExpression"     : true
            }
        }],
        "key-spacing"     : [2, {
            "singleLine": {
                "beforeColon": true,
                "afterColon": true
            },
            "multiLine": {
                "beforeColon": true,
                "afterColon": true,
                "align": "colon"
            }
        }],
        "space-before-function-paren" : ["error", "never"]
    }
}
